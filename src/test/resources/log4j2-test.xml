<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <File name="testFile" fileName="target/test.log">
            <PatternLayout pattern="%d %-5p [%t|%c{1}] %m%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="all">
            <AppenderRef ref="testFile"/>
        </Root>
    </Loggers>
</Configuration>
